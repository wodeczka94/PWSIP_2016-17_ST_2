<Window x:Class="WPF_ChatClient.kontakty"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_ChatClient"
        mc:Ignorable="d"
        Title="kontakty" Height="300" Width="300" WindowStartupLocation="CenterScreen" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="184*"/>
            <RowDefinition Height="35*"/>
        </Grid.RowDefinitions>
        <ScrollViewer Margin="5" Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Name="spKontakty" />
           
        </ScrollViewer>
        <Button x:Name="button" Content="Dodaj kontakt" Margin="0,0,202,30" Width="90" Click="buttonDodajKontakt_Click" />

    </Grid>
</Window>
