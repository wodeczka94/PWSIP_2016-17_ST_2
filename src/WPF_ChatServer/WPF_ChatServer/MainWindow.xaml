<Window x:Class="WPF_ChatServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_ChatServer"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="21*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="365*"/>
            <ColumnDefinition Width="152*"/>
        </Grid.ColumnDefinitions>
        <RichTextBox x:Name="richTextBox" Grid.RowSpan="2" >
            <FlowDocument>
                <Paragraph>
                    
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <ListView x:Name="listView" Grid.Column="1" Margin="5" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="IpAddress" DisplayMemberBinding="{Binding IP}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
